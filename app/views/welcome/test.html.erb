<h1>Weather</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<div class="well">
			<div class="row">
				<div class="col-md-7">
					<p><em>Weather</em></p>
					<p>
						Temp: <%= @temp_f %> F / <%= @temp_c %> C
					</p>
					<p>
						Feels like: <%= @real_feel %> F
					</p>
				</div>
				<div class="col-md-5">
					<p>
						<%= @weather_words %> <%= image_tag @weather_icon %>
					</p>
					<p>
						<%= link_to "Full Forecast", @forecast_link, target: "blank" %>
					</p>
				</div>
			</div>
		</div>
	</div>


</div>
